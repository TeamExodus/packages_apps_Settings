<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/settingsFragmentStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            />

        <RelativeLayout
                android:id="@+id/enable_button_layout"
                style="@style/settingsFragmentStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true" >

            <TextView
                    android:id="@+id/enable_button_text"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textAppearance="@android:style/TextAppearance.Material.Subhead"
                    android:textColor="?android:attr/textColorPrimary"
                    android:text="@string/enable_button_title" />

            <Switch
                    android:id="@+id/enable_button_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_alignParentRight="true" />

        </RelativeLayout>

        <View
            android:id="@+id/left_navbar_separator_view"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
                android:id="@+id/single_press_layout"
                style="@style/settingsFragmentStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:background="@drawable/dashboard_tile_background" >

            <TextView
                android:id="@+id/single_press_title"
                android:paddingLeft="2dp"
                android:paddingBottom="2dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textAppearance="@android:style/TextAppearance.Material.Subhead"
                android:textColor="?android:attr/textColorPrimary"
                android:text="@string/single_press_title" />

            <TextView
                android:id="@+id/single_press_summary"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="2dp"
                android:textAppearance="@android:style/TextAppearance.Material.Body1"
                android:textColor="?android:attr/textColorSecondary" />

        </LinearLayout>

        <View
            android:id="@+id/left_navbar_separator_view"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            />

        <LinearLayout
                android:id="@+id/long_press_layout"
                style="@style/settingsFragmentStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:background="@drawable/dashboard_tile_background" >

            <TextView
                android:id="@+id/long_press_title"
                android:paddingLeft="2dp"
                android:paddingBottom="2dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textAppearance="@android:style/TextAppearance.Material.Subhead"
                android:textColor="?android:attr/textColorPrimary"
                android:text="@string/long_press_title" />

            <TextView
                android:id="@+id/long_press_summary"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="2dp"
                android:textAppearance="@android:style/TextAppearance.Material.Body1"
                android:textColor="?android:attr/textColorSecondary" />

        </LinearLayout>

        <View
            android:id="@+id/left_navbar_separator_view"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            />

        <LinearLayout
                android:id="@+id/double_tap_layout"
                style="@style/settingsFragmentStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:background="@drawable/dashboard_tile_background" >

            <TextView
                android:id="@+id/double_press_title"
                android:paddingLeft="2dp"
                android:paddingBottom="2dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textAppearance="@android:style/TextAppearance.Material.Subhead"
                android:textColor="?android:attr/textColorPrimary"
                android:text="@string/double_press_title" />

            <TextView
                android:id="@+id/double_press_summary"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="2dp"
                android:textAppearance="@android:style/TextAppearance.Material.Body1"
                android:textColor="?android:attr/textColorSecondary" />

        </LinearLayout>

        <View
            android:id="@+id/left_navbar_separator_view"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            />

    </LinearLayout>
</LinearLayout>
