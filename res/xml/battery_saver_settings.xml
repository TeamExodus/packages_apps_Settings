<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/battery_saver"
        android:key="battery_saver">

    <!-- CyanogenMod Battery Mode -->
    <ListPreference
            android:key="pref_perf_profile"
            android:dialogTitle="@string/perf_profile_title"
            android:title="@string/perf_profile_title"
            android:persistent="false" />

    <com.android.settings.cyanogenmod.SecureSettingSwitchPreference
            android:key="app_perf_profiles_enabled"
            android:title="@string/autoperf_title"
            android:summary="@string/autoperf_summary"
            android:defaultValue="true" />

    <!-- Turn on automatically -->
    <com.android.settings.notification.DropDownPreference
            android:key="turn_on_automatically"
            android:title="@string/battery_saver_turn_on_automatically_title"
            android:persistent="false" />

    <!-- Warning Color: Style -->
    <net.margaritov.preference.colorpicker.ListColorPreference
            android:key="battery_saver_warning_color"
            android:title="@string/battery_saver_warning_color_title"
            android:dialogTitle="@string/battery_saver_warning_color_title"
            android:entries="@array/battery_saver_warning_color_entries"
            android:entryValues="@array/battery_saver_warning_color_values"/>

    <!-- Feature description text -->
    <com.android.settings.fuelgauge.WallOfTextPreference
            android:key="description"
            android:summary="@*android:string/battery_saver_description"
            android:persistent="false"
            android:selectable="false" />

</PreferenceScreen>

